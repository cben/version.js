<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Jasmine Spec Runner</title>
    <link rel="shortcut icon" type="image/png" href="<%= temp %>/jasmine_favicon.png">
    <% css.forEach(function (style) { %>
      <link rel="stylesheet" type="text/css" href="<%= style %>">
    <% }) %>
  </head>
  <body>
    <% if (options.qs) { %>
      <script>
        if (!window.location.search) {
          window.location.search = '?versionjs=<%= options.versionjs %>&testload=<%= options.testload %>';
        }
      </script>
    <% } %>
    <% with (scripts) { %>
      <% [].concat(polyfills, jasmine, boot, vendor, helpers, src, specs, reporters).forEach(function (script) { %>
        <% if (script.match(/version\.js$/)) { %>
          <script src="<%= script %>" data-url="google" data-lib="jquery" data-ver="1.9.1" data-file="jquery.min"></script>
          <script src="<%= script %>" data-type="css" data-url="./test/fixtures/testcss-{{VERSION}}.css" data-ver="1.0.0" data-param="testcss"></script>
          <script>
            version.load({
              url: './test/fixtures/testload-1.0.0.js'
            });

            version.load({
              url: './test/fixtures/testload-{{VERSION}}.js',
              version: '2.0.0',
              param: 'testload'
            });

            version.load({
              type: 'css',
              url: './test/fixtures/testcss-{{VERSION}}.css',
              version: '2.0.0',
              param: 'testcss'
            });

            version.load({
              url: 'cdnjs',
              library: 'lodash.js',
              version: '1.0.1',
              file: 'lodash.min',
              param: 'lodash'
            });

            version.load({
              url: 'jsdelivr',
              library: 'backbonejs',
              version: '1.0.0',
              file: 'backbone-min',
              param: 'backbone'
            });
          </script>
        <% } else { %>
          <script src="<%= script %>"></script>
        <% } %>
      <% }) %>
    <% } %>
    <div id="testcss100" class="testcss100">1</div>
    <div id="testcss200" class="testcss200">2</div>
  </body>
</html>
